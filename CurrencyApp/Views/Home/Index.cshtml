@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>




<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 10vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">

                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h3>Currency Converter</h3>
                </div>

                <div class="form-floating mb-3">
                    <input type="number" data-bind="value: amount" class="form-control" id="floatingInput" placeholder="Amount">
                    <label for="floatingInput">Amount</label>
                </div>

                <div class="form-floating mb-3">
                    <select data-bind="options: currencies, optionsText: 'name', value: fromCurrency" class="form-select form-select-lg" aria-label=".form-select-lg example">
                    
                    </select>
                </div>

                <div class="form-floating mb-3">
                    <select data-bind="options: currencies, optionsText: 'name', value: toCurrency" class="form-select form-select-lg" aria-label=".form-select-lg example">
                  
                    </select>
                </div>

             

                <p class="text-left mb-0">Amount : <span data-bind="text: convertedAmount"></span></p>
               
            </div>
        </div>
    </div>
</div>

<script src="~/js/currency_view_model.js"></script>



