@using Currency.Entities.Dtos;
@model UserRegistrationDto

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 20vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <a href="index.html" class="">
                        <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i> </h3>
                    </a>
                    <h3>Sign Up</h3>
                </div>
                <form method="post" asp-action="SaveNewUser">
                <div class="form-floating mb-3">
                    <input type="text" asp-for="UserName" class="form-control" id="floatingText" placeholder="Name">
                    <label for="floatingText">Name</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" asp-for="Surname" class="form-control" id="floatingText" placeholder="Surname">
                    <label for="floatingText">Surname</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" asp-for="PhoneNumber" class="form-control" id="floatingText" placeholder="532..">
                    <label for="floatingText">Phone Number</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="email" asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                </div>

                <div class="form-floating mb-4">
                    <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>

                
                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Sign Up</button>
                </form>
                
                <p class="text-center mb-0">Already have an Account? <a href="">Sign In</a></p>
            </div>
        </div>
    </div>
</div>